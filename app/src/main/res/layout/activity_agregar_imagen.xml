<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".agregarImagen">

    <LinearLayout
        android:layout_width="352dp"
        android:layout_height="387dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textViweCorreo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/correoUusaioSubir" />

        <EditText
            android:id="@+id/editTextLink"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints=""
            android:ems="10"
            android:hint="@string/urlStringValue"
            android:inputType="textPersonName"
            android:minHeight="48dp" />

        <EditText
            android:id="@+id/editTituloText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:autofillHints=""
            android:ems="10"
            android:hint="@string/tituloStringValue"
            android:inputType="textPersonName"
            android:minHeight="48dp" />

        <Button
            android:id="@+id/btnSubirImagen"
            android:layout_width="80dp"
            android:layout_height="48dp"
            android:layout_marginBottom="52dp"
            android:minHeight="48dp"
            android:shadowColor="@color/colorBotones"
            android:text="@string/subirStringvaule"
            app:strokeColor="@color/black" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>